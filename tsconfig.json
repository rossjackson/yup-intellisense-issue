{
    "compilerOptions": {
        "alwaysStrict": true,
        "noImplicitAny": true,
        "target": "es2020",
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "baseUrl": "src"
    },
    "exclude": ["node_modules"]
}
